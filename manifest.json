{
    "manifest_version": 3,
    "name": "TabTalk AI: Conversational Web Assistant",
    "version": "1.0.0",
    "description": "Chat with any webpage using AI - powered by Google Gemini",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "TabTalk AI",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }